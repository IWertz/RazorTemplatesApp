@model RegistrationModel
@{
    ViewData["Title"] = "Index";
}

<h2>Registration Form</h2>
<p style="color:red;">@ViewBag.FailForm</p>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Age">Age</label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Contact">Contact Method</label>
        <select asp-for="Contact" class="form-control">
            <option value="">Select a contact method</option>
            <option value="By Phone">By Phone</option>
            <option value="By Email">By Email</option>
            <option value="By Surface Mail">By Surface Mail</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Confirm Submission</button>
    <button type="reset" class="btn btn-outline-primary">Reset Form</button>
</form>