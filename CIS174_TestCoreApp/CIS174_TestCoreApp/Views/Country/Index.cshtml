@model CountryListViewModel
@{
    ViewBag.Title = "Olympic Countries";
    Layout = "_CountryLayout";
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (GameType game in Model.Games)
            {
                <a asp-action="Index" asp-route-activeGame="@game.GameTypeId" asp-route-activeCat="@Model.ActiveCat" class="list-group-item @Model.CheckActiveGame(game.GameTypeId.ToString())">
                    @game.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category cat in Model.Categories)
            {
                <a asp-action="Index" asp-route-activeGame="@Model.ActiveGame" asp-route-activeCat="@cat.CategoryId" class="list-group-item @Model.CheckActiveCat(cat.CategoryId.ToString())">
                    @cat.Name
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <form asp-action="Details" method="post">
                        <button class="bg-white border-0" type="submit">
                            <img src="~/images/@country.CountryImage" alt="@country.Name" width="100" height="100" title="@country.Name | @country.GameType.Name @country.Category.Name" />
                        </button>

                        <input type="hidden" asp-for="@country.CountryId" />
                        <input type="hidden" asp-for="ActiveGame" />
                        <input type="hidden" asp-for="ActiveCat" />
                    </form>
                </li>
            }
        </ul>
    </div>
</div>
