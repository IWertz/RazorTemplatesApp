@model CountryViewModel
@{ 
    ViewData["Title"] = "Country Details";
}

<h2>Country Details</h2>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Country.CountryImage" alt="" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Game: @Model.Country.GameType.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Category: @Model.Country.Category.Name</h4>
            </li>
            <li class="list-group-item">
                <a asp-action="Index" asp-route-game="@Model.ActiveGame" asp-route-category="@Model.ActiveCat">
                    Return To Home Page
                </a>
            </li>
        </ul>
    </div>
</div>