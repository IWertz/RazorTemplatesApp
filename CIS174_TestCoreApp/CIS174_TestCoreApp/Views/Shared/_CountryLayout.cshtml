<!DOCTYPE html>

@{
    Layout = "_Layout";
}

<html>
<head>
    <meta name="viewport" content="width=devide-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <header class="text-center text-white">
            <h1 class="bg-primary mt-3 p-3">Olympic Countries</h1>

            @if (TempData["message"] != null)
            {
                <h4 class="bg-success p2">@TempData["message"]</h4>
            }

            @if (!ViewContext.View.Path.Contains("Favorites"))
            {
                var session = new CountrySession(Context.Session);
                <h5 class="bg-info p-2">
                    <a asp-controller="Favorites" class="text-white">My Favorite Countries</a>

                    <span class="badge badge-light">
                        @(session.GetMyCountryCount())
                    </span>
                </h5>
            }
        </header>
        <main>
            @RenderBody()
        </main>
    </div>
</body>
</html>